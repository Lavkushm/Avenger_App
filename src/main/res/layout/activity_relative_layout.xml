<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtHeaderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:padding="8dp"
        android:text="Marvel Fame"
        android:textColor="#000fff"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHeaderLayout"
        android:layout_marginLeft="120dp"
        android:text="Tony Stark"
        android:textColor="#CC0025"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/txtSubHeader"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tony_stark_new" />
    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Enter your user name here"
        android:layout_below="@id/imgTonyStark"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Password"
        android:layout_below="@id/etText"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Log In"
        android:background="@color/teal_700"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

</RelativeLayout>